<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the View for hr.enseignant Form -->
        <record id="view_hr_enseignant_form" model="ir.ui.view">
            <field name="name">hr.enseignant.form</field>
            <field name="model">hr.enseignant</field>
            <field name="arch" type="xml">
                <form string="Enseignant">
                    <header>
                        <button name="action_open_time_off" string="Congé" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Enseignant</h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" placeholder="Nom enseignant"/>
                                <field name="job_title" string="Titre de poste"/>
                            </group>
                            <group>
                                <div class="o_employee_avatar" style="margin-left: 400px">
                                    <field name="image_1920" widget='image' class="oe_avatar m-0"
                                           options='{"zoom": true, "preview_image":"avatar_128"}'/>

                                </div>
                            </group>
                            <group>
                                <field name="mobile_pro" widget="phone"/>
                                <field name="email_pro" widget="email"/>
                            </group>
                            <group>
                                <field name="job_id" attrs="{'readonly': [('job_title','=','Enseignant')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="informations_personnelles" string="Informations Personnelles"
                                  groups="hr.group_hr_user">
                                <group>
                                    <group string="Contact Privé">
                                        <field name="email_pers" string="Email"/>
                                        <field name="mobile_pers" string="Téléphone"/>
                                        <separator name="citoyenneté" string="Citoyenneté"/>
                                        <field name="lang" string="Langue"/>
                                        <field name="genre" string="Genre"/>
                                        <field name="date_naiss"/>
                                        <separator name="education" string="Éducation"/>
                                        <field name="certificat"/>
                                        <field name="study_field"/>
                                        <field name="study_school"/>
                                    </group>
                                    <group string="Statut Familial">
                                        <field name="matrimonial"/>
                                        <field name="children"/>
                                        <separator name="emergency" string="Urgence"/>
                                        <field name="emergency_contact"/>
                                        <field name="emergency_phone" class="o_force_ltr"/>
                                    </group>
                                </group>
                            </page>


                            <page name="informations_professionnelle" string="Informations Professionnelle"
                                  groups="hr.group_hr_user">
                                <group>
                                    <group string="Contact Privé">
                                        <field name="company_id" string="Societe"/>
                                        <field name="department_id" string="Department"/>
                                        <separator name="horaire" string="Horaire"/>
                                        <field name="resource_calendar_id" string="Horaire"/>>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <!-- Define the Tree View for hr.enseignant -->
        <record id="view_hr_enseignant_tree" model="ir.ui.view">
            <field name="name">hr.enseignant.tree</field>
            <field name="model">hr.enseignant</field>
            <field name="arch" type="xml">
                <tree string="Liste des Enseignants">
                    <field name="name" width="200" string="Nom enseignat"/>
                    <field name="mobile_pro" width="200"/>
                    <field name="email_pro" width="200"/>
                    <!--                    <field name="contract_type" width="200"/>-->
                </tree>
            </field>
        </record>

        <!-- Define the Kanban View for hr.enseignant -->
        <record id="hr_kanban_view_enseignants" model="ir.ui.view">
            <field name="name">hr.enseignant.kanban</field>
            <field name="model">hr.enseignant</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_enseignant_kanban" js_class="hr_enseignant_kanban" sample="1">
                    <field name="id"/>
                    <field name="image_128"/>
                    <field name="email_pro"/>
                    <field name="mobile_pro"/>
                    <field name="genre"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_enseignant_kanban_record">
                                <field name="image_1024" class="o_kanban_image_fill_left d-block"
                                       preview_image="image_128"
                                       widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>

                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name" placeholder="Nom de l'enseignant"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="email_pro"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="text-muted">Mobile Pro:</span>
                                        <field name="mobile_pro"/>
                                    </div>
                                    <div>
                                        <field name="genre" widget="selection"/>
                                    </div>
                                    <div class="o_hr_enseignant_kanban_bottom">
                                        <field name="category_ids" widget="many2many_tags"
                                               options="{'color_field': 'color'}"/>
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="view_hr_enseigant_search" model="ir.ui.view">
            <field name="name">hr.enseignant.search</field>
            <field name="model">hr.enseignant</field>
            <field name="arch" type="xml">
                <search string="Search Znseiganat">
                    <!-- Here we add a filter by courses -->
                    <field name="course_ids" string="Cours" filter_domain="[('course_ids','ilike',self)]"/>
                    <field name="name" string="Nom" filter_domain="[('name','ilike',self)]"/>
                    <field name="department_id" string="department" filter_domain="[('department_id','ilike',self)]"/>

                    <searchpanel>
                        <field name="department_id"/>
                    </searchpanel>

                </search>
            </field>
        </record>


        <!-- Define the Action for the Tree View -->
        <record id="action_enseignant_tree" model="ir.actions.act_window">
            <field name="name">Enseignant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.enseignant</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>




    </data>
</odoo>